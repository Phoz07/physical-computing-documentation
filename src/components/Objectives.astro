---
import Container from "./Container.astro";
import { Goal } from "@lucide/astro";

const objectives = [
  "เพื่อพัฒนา ระบบตรวจจับการสวมหมวกกันน็อคอัตโนมัติ สำหรับผู้ขับขี่มอเตอร์ไซค์ที่ผ่านเข้าออกพื้นที่มหาวิทยาลัย",
  "เพื่อให้ระบบสามารถ สั่งควบคุมอุปกรณ์ไม้กั้น (Servo/Relay) ได้ตามผลการตรวจจับแบบ real-time",
  "เพื่อเพิ่ม ความปลอดภัยและลดภาระงานของเจ้าหน้าที่รักษาความปลอดภัย",
  "เพื่อจัดเก็บข้อมูลและแสดงผลในรูปแบบ Dashboard ออนไลน์ สำหรับติดตามสถิติการสวมหมวกในแต่ละวัน",
  "เพื่อเป็น ต้นแบบของระบบอัตโนมัติด้านความปลอดภัย ที่สามารถต่อยอดใช้ในสถานที่อื่นได้",
];
---

<section class="min-h-screen flex items-center py-20 bg-gray-900">
  <Container>
    <div class="flex flex-col items-center gap-12">
      <h1 class="text-4xl font-bold text-center text-white">Objectives</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-5xl">
        {
          objectives.map((objective) => (
            <div class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-blue-500 transition-all duration-300">
              <div class="flex gap-3">
                <Goal class="w-6 h-6 text-blue-400 flex-shrink-0 mt-1" />
                <p class="text-gray-300">{objective}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</section>
